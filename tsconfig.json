{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es6",
    "outDir": "dist",
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": [
      "node",
      "mocha"
    ]
  },
  "exclude": [
    "node_modules"
  ],
}
